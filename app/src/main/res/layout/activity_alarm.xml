<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:padding="20dp"
    tools:context=".alarm">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:src="@drawable/foto" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_sb"
            android:text="User"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_bell" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@id/header"
        android:layout_marginBottom="27dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="59dp">

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_sb"
                android:text="Alarm Kegiatan"
                android:textColor="@color/white"
                android:textSize="34dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/rabu_15_desember_2021"
            android:textColor="#4DFFFFFF"
            android:textSize="15dp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/a1"
        android:layout_width="342dp"
        android:layout_height="118dp"
        android:layout_below="@id/atas"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="18dp">

        <ImageButton
            android:id="@+id/showTimePicker"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@color/black" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="25.9dp"
            android:layout_marginBottom="20.6dp"
            android:background="#00000000"
            android:src="@drawable/ic_delete" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="12dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="5dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/timeAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:15"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/myMessage"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="35dp"
                android:hint="Masukkan pesan"
                android:textColor="@color/white"
                android:textColorHint="#B2FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="70dp"
                android:text="Kam, Jum, Sab"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/a2"
        android:layout_width="342dp"
        android:layout_height="118dp"
        android:layout_below="@+id/a1"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="18dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="#00000000"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="25.9dp"
            android:layout_marginBottom="20.6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="12dp">

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:15"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/myMessage2"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="35dp"
                android:hint="Masukkan pesan"
                android:textColor="@color/white"
                android:textColorHint="#B2FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="70dp"
                android:text="Kam, Jum, Sab"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/a3"
        android:layout_width="342dp"
        android:layout_height="118dp"
        android:layout_below="@+id/a2"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="18dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="#00000000"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="25.9dp"
            android:layout_marginBottom="20.6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="12dp">

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:15"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/myMessage3"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="35dp"
                android:hint="Masukkan pesan"
                android:textColor="@color/white"
                android:textColorHint="#B2FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="70dp"
                android:text="Kam, Jum, Sab"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:layout_below="@+id/a3"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="18dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/ic_plus" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>