<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:padding="20dp"
    tools:context=".Inputbmi">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:src="@drawable/foto"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_sb"
            android:text="User"
            android:textColor="@color/white"
            android:textSize="17dp"></TextView>
        android:textSize="17dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_bell" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@id/header"
        android:layout_marginBottom="27dp">

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_sb"
                android:text="Kalkulator BMI"
                android:textColor="@color/white"
                android:textSize="34dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_marginLeft="27dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/rabu_15_desember_2021"
            android:textColor="#4DFFFFFF"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atas"
        android:layout_marginLeft="27dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="18dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tinggi"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/opensans_sb"
                    android:text="Tinggi"
                    android:textColor="#B3FFFFFF"
                    android:textSize="17dp"></TextView>
                android:textSize="17dp"/>

                <TextView
                    android:id="@+id/berat"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tinggi"
                    android:fontFamily="@font/opensans_sb"
                    android:text="Berat"
                    android:textColor="#B3FFFFFF"
                    android:textSize="17dp"></TextView>
                android:textSize="17dp"/>

                <TextView
                    android:id="@+id/koma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="25dp"
                    android:layout_toRightOf="@id/tinggi"
                    android:fontFamily="@font/opensans_sb"
                    android:text=":"
                    android:textColor="#B3FFFFFF"
                    android:textSize="17dp"></TextView>
                android:textSize="17dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/koma"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/berat"
                    android:fontFamily="@font/opensans_sb"
                    android:text=":"
                    android:textColor="#B3FFFFFF"
                    android:textSize="17dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="49dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/tinggi"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/inputTinggi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/opensans_bold"
                        android:hint="0"
                        android:inputType="number"
                        android:paddingTop="69dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"></EditText>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="49dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/koma"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/tinggi"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/inputBerat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/opensans_bold"
                        android:hint="0"
                        android:inputType="number"
                        android:paddingTop="69dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"></EditText>
                    android:textSize="15dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/koma"
                    android:layout_marginLeft="76dp"
                    android:layout_toRightOf="@id/berat"
                    android:fontFamily="@font/opensans_sb"
                    android:text="kg"
                    android:textColor="#B3FFFFFF"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="76dp"
                    android:layout_toRightOf="@id/tinggi"
                    android:fontFamily="@font/opensans_sb"
                    android:text="cm"
                    android:textColor="#B3FFFFFF"
                    android:textSize="17dp" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="117dp"
                android:layout_height="71dp"
                android:layout_gravity="right"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp">
                android:layout_marginRight="17dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:onClick="onBmiButton"></ImageButton>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tinggi"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Calculate BMI"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="18dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:layout_marginRight="7.3dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="16"
                    android:textColor="#4DFFFFFF"
                    android:textSize="15dp" />
                android:textSize="15dp" />

                <ImageView
                    android:id="@+id/param"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/min"
                    android:src="@drawable/ic_parambmi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.3dp"
                    android:layout_marginTop="75dp"
                    android:layout_toRightOf="@id/param"
                    android:fontFamily="@font/opensans_regular"
                    android:text="40"
                    android:textColor="#4DFFFFFF"
                    android:textSize="15dp" />
                android:textSize="15dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/param"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/opensans_bold"
                android:text="16"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
            android:textSize="15dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>